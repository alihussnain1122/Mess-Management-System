@page "{id:int}"
@model MessManagement.Areas.Admin.Pages.Members.BillModel
@{
    ViewData["Title"] = "Generate Bill";
}

<div class="mb-6">
    <a href="/Admin/Members" class="text-emerald-400 hover:text-emerald-300 transition-colors">
        <i class="fas fa-arrow-left mr-2"></i>Back to Members
    </a>
</div>

<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-8">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold text-white">Generate Monthly Bill</h1>
            <p class="text-white/60">Create a detailed monthly statement for @Model.Member?.FullName</p>
        </div>
        <div class="w-14 h-14 bg-emerald-500/30 rounded-xl flex items-center justify-center">
            <i class="fas fa-file-invoice-dollar text-emerald-400 text-2xl"></i>
        </div>
    </div>

    @if (Model.Member == null)
    {
        <div class="bg-red-500/20 border border-red-500/30 text-red-400 px-4 py-3 rounded-xl">
            <i class="fas fa-exclamation-circle mr-2"></i>Member not found.
        </div>
    }
    else
    {
        <!-- Member Info Card -->
        <div class="bg-white/10 rounded-xl p-4 mb-6 border border-white/10">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-full flex items-center justify-center text-white text-xl font-bold">
                    @Model.Member.FullName[0]
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-white">@Model.Member.FullName</h3>
                    <p class="text-white/60 text-sm">Room: @Model.Member.RoomNumber</p>
                    <span class="inline-block px-2 py-1 text-xs rounded-full mt-1 @(Model.Member.IsActive ? "bg-emerald-500/20 text-emerald-400" : "bg-red-500/20 text-red-400")">
                        @(Model.Member.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
        </div>

        <!-- Month Selection -->
        <form method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-emerald-400 mb-2">Select Month</label>
                    <select asp-for="SelectedMonth" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                        <option value="1" class="bg-gray-800">January</option>
                        <option value="2" class="bg-gray-800">February</option>
                        <option value="3" class="bg-gray-800">March</option>
                        <option value="4" class="bg-gray-800">April</option>
                        <option value="5" class="bg-gray-800">May</option>
                        <option value="6" class="bg-gray-800">June</option>
                        <option value="7" class="bg-gray-800">July</option>
                        <option value="8" class="bg-gray-800">August</option>
                        <option value="9" class="bg-gray-800">September</option>
                        <option value="10" class="bg-gray-800">October</option>
                        <option value="11" class="bg-gray-800">November</option>
                        <option value="12" class="bg-gray-800">December</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-emerald-400 mb-2">Select Year</label>
                    <select asp-for="SelectedYear" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                        @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 2; year--)
                        {
                            <option value="@year" class="bg-gray-800">@year</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Meal Rates Section -->
            <div class="bg-white/5 rounded-xl p-4 border border-white/10">
                <h4 class="text-white font-medium mb-4 flex items-center">
                    <i class="fas fa-utensils text-emerald-400 mr-2"></i>
                    Meal Rates (per meal)
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm text-amber-400 mb-1">
                            <i class="fas fa-sun mr-1"></i>Breakfast Rate
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-white/50">Rs.</span>
                            <input type="number" asp-for="BreakfastRate" step="0.01" 
                                   class="w-full bg-white/10 border border-white/20 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-amber-500" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm text-blue-400 mb-1">
                            <i class="fas fa-cloud-sun mr-1"></i>Lunch Rate
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-white/50">Rs.</span>
                            <input type="number" asp-for="LunchRate" step="0.01" 
                                   class="w-full bg-white/10 border border-white/20 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm text-purple-400 mb-1">
                            <i class="fas fa-moon mr-1"></i>Dinner Rate
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-white/50">Rs.</span>
                            <input type="number" asp-for="DinnerRate" step="0.01" 
                                   class="w-full bg-white/10 border border-white/20 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-500" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Water & Tea Rates -->
            <div class="bg-white/5 rounded-xl p-4 border border-white/10">
                <h4 class="text-white font-medium mb-4 flex items-center">
                    <i class="fas fa-tint text-cyan-400 mr-2"></i>
                    Other Charges
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm text-cyan-400 mb-1">Water Rate (per bottle)</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-white/50">Rs.</span>
                            <input type="number" asp-for="WaterRate" step="0.01" 
                                   class="w-full bg-white/10 border border-white/20 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-cyan-500" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm text-orange-400 mb-1">Tea/Coffee Rate (per cup)</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-white/50">Rs.</span>
                            <input type="number" asp-for="TeaRate" step="0.01" 
                                   class="w-full bg-white/10 border border-white/20 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-orange-500" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex gap-4 flex-wrap">
                <button type="submit" class="flex-1 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white py-3 rounded-xl font-semibold transition-all shadow-lg">
                    <i class="fas fa-file-pdf mr-2"></i>
                    Generate PDF Bill
                </button>
                <button type="submit" asp-page-handler="SendEmail" class="flex-1 bg-gradient-to-r from-blue-500 to-indigo-500 hover:from-blue-600 hover:to-indigo-600 text-white py-3 rounded-xl font-semibold transition-all shadow-lg">
                    <i class="fas fa-envelope mr-2"></i>
                    Send Bill via Email
                </button>
                <a href="/Admin/Members" class="px-6 py-3 bg-white/10 hover:bg-white/20 text-white rounded-xl font-semibold transition-all border border-white/20">
                    Cancel
                </a>
            </div>
        </form>
    }
</div>
