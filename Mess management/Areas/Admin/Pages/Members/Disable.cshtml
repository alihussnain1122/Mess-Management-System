@page "{id:int}"
@model MessManagement.Areas.Admin.Pages.Members.DisableModel
@{
    ViewData["Title"] = "Disable Member";
}

<div class="max-w-md mx-auto">
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 text-center">
        <div class="w-16 h-16 bg-red-500/30 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-exclamation-triangle text-red-400 text-2xl"></i>
        </div>
        <h2 class="text-xl font-semibold text-white mb-2">Disable Member</h2>
        <p class="text-white/60 mb-6">Are you sure you want to disable <strong class="text-white">@Model.MemberName</strong>?</p>

        <form method="post" class="flex gap-4 justify-center">
            <a href="/Admin/Members" class="px-6 py-2 bg-white/10 border border-white/20 rounded-xl text-white/70 hover:bg-white/20 transition-colors">Cancel</a>
            <button type="submit" class="px-6 py-2 bg-red-500 hover:bg-red-600 text-white rounded-xl transition-colors">Disable</button>
        </form>
    </div>
</div>