@page "{id:int}"
@model MessManagement.Areas.Admin.Pages.Members.DetailsModel
@{
    ViewData["Title"] = "Member Details";
}

<div class="mb-6 flex justify-between items-center">
    <div>
        <a href="/Admin/Members" class="text-emerald-400 hover:text-emerald-300 text-sm mb-2 inline-block">
            <i class="fas fa-arrow-left mr-1"></i>Back to Members
        </a>
        <h1 class="text-2xl font-bold text-white">Member Details</h1>
        <p class="text-white/60">View attendance and billing details</p>
    </div>
</div>

<!-- Member Info Card -->
<div class="bg-gradient-to-br from-indigo-600 to-purple-700 rounded-2xl p-6 mb-6 shadow-xl">
    <div class="flex justify-between items-start">
        <div class="flex items-center gap-4">
            <div class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
                <span class="text-2xl font-bold text-white">@Model.Member?.FullName[0]</span>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-white">@Model.Member?.FullName</h2>
                <p class="text-white/70">Room: @Model.Member?.RoomNumber</p>
                <p class="text-white/50 text-sm">@@Model.Member?.User?.Username</p>
            </div>
        </div>
        <div class="text-right">
            <span class="px-3 py-1 rounded-full text-sm font-medium @(Model.Member?.IsActive == true ? "bg-emerald-500/30 text-emerald-300 border border-emerald-500/50" : "bg-red-500/30 text-red-300 border border-red-500/50")">
                @(Model.Member?.IsActive == true ? "Active" : "Inactive")
            </span>
            <p class="text-white/50 text-sm mt-2">Joined: @Model.Member?.JoinDate.ToString("MMM dd, yyyy")</p>
        </div>
    </div>
</div>

<!-- Month/Year Selection -->
<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 mb-6">
    <form method="get" class="flex flex-wrap items-end gap-4">
        <input type="hidden" name="id" value="@Model.Member?.MemberId" />
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Month</label>
            <select name="month" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(Model.SelectedMonth == i)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Year</label>
            <select name="year" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                {
                    <option value="@y" selected="@(Model.SelectedYear == y)">@y</option>
                }
            </select>
        </div>
        <button type="submit" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-4 py-2 rounded-xl transition-all shadow-lg">
            <i class="fas fa-search mr-2"></i>View
        </button>
    </form>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-4 mb-6">
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-sm text-white/60">üç≥ Breakfast</p>
        <p class="text-2xl font-bold text-amber-400">@Model.BreakfastCount</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-sm text-white/60">üçõ Lunch</p>
        <p class="text-2xl font-bold text-blue-400">@Model.LunchCount</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-sm text-white/60">üçΩÔ∏è Dinner</p>
        <p class="text-2xl font-bold text-purple-400">@Model.DinnerCount</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-sm text-white/60">üìä Total Meals</p>
        <p class="text-2xl font-bold text-emerald-400">@Model.TotalMeals</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-sm text-white/60">‚úÖ Present</p>
        <p class="text-2xl font-bold text-emerald-400">@Model.PresentDays</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-sm text-white/60">‚ùå Absent</p>
        <p class="text-2xl font-bold text-red-400">@Model.AbsentDays</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-sm text-white/60">üí∞ Balance</p>
        <p class="text-2xl font-bold @(Model.Balance > 0 ? "text-red-400" : "text-emerald-400")">Rs.@Model.Balance.ToString("N0")</p>
    </div>
</div>

<!-- Bill and Payment Summary -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Charges Breakdown -->
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
        <div class="bg-white/10 px-6 py-4 border-b border-white/20">
            <h3 class="font-semibold text-white">
                <i class="fas fa-receipt mr-2 text-emerald-400"></i>Bill Breakdown - @Model.MonthName @Model.SelectedYear
            </h3>
        </div>
        <div class="p-6">
            <table class="w-full">
                <tbody class="divide-y divide-white/10">
                    <tr>
                        <td class="py-3 text-white/80">üç≥ Breakfast</td>
                        <td class="py-3 text-right text-white/60">@Model.BreakfastCount √ó Rs.@Model.BreakfastRate</td>
                        <td class="py-3 text-right font-semibold text-amber-400">Rs.@Model.BreakfastCharges.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">üçõ Lunch</td>
                        <td class="py-3 text-right text-white/60">@Model.LunchCount √ó Rs.@Model.LunchRate</td>
                        <td class="py-3 text-right font-semibold text-blue-400">Rs.@Model.LunchCharges.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">üçΩÔ∏è Dinner</td>
                        <td class="py-3 text-right text-white/60">@Model.DinnerCount √ó Rs.@Model.DinnerRate</td>
                        <td class="py-3 text-right font-semibold text-purple-400">Rs.@Model.DinnerCharges.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">‚òï Tea/Coffee</td>
                        <td class="py-3 text-right text-white/60">@Model.TotalMeals √ó Rs.@Model.TeaRate</td>
                        <td class="py-3 text-right font-semibold text-amber-400">Rs.@Model.TeaCharges.ToString("N2")</td>
                    </tr>
                    <tr class="bg-white/5">
                        <td colspan="2" class="py-3 font-semibold text-white">Total Charges</td>
                        <td class="py-3 text-right font-bold text-lg text-emerald-400">Rs.@Model.GrandTotal.ToString("N2")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Payment Summary -->
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
        <div class="bg-white/10 px-6 py-4 border-b border-white/20">
            <h3 class="font-semibold text-white">
                <i class="fas fa-wallet mr-2 text-blue-400"></i>Payment Summary
            </h3>
        </div>
        <div class="p-6">
            <table class="w-full">
                <tbody class="divide-y divide-white/10">
                    <tr>
                        <td class="py-3 text-white/80">Total Charges</td>
                        <td class="py-3 text-right font-semibold text-white">Rs.@Model.GrandTotal.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">Amount Paid</td>
                        <td class="py-3 text-right font-semibold text-emerald-400">Rs.@Model.AmountPaid.ToString("N2")</td>
                    </tr>
                    <tr class="bg-white/5">
                        <td class="py-3 font-semibold text-white">Balance Due</td>
                        <td class="py-3 text-right font-bold text-lg @(Model.Balance > 0 ? "text-red-400" : "text-emerald-400")">
                            Rs.@Model.Balance.ToString("N2")
                        </td>
                    </tr>
                </tbody>
            </table>
            
            @if (Model.Balance <= 0)
            {
                <div class="mt-4 pt-4 border-t border-white/10">
                    <div class="bg-emerald-500/20 border border-emerald-500/30 rounded-xl p-4 text-center">
                        <i class="fas fa-check-circle text-emerald-400 text-2xl mb-2"></i>
                        <p class="text-emerald-400 font-medium">Fully Paid</p>
                    </div>
                </div>
            }

            <!-- Payments List -->
            @if (Model.Payments.Any())
            {
                <div class="mt-4 pt-4 border-t border-white/10">
                    <h4 class="text-white/70 text-sm mb-3">Payments this month:</h4>
                    <div class="space-y-2">
                        @foreach (var payment in Model.Payments)
                        {
                            <div class="flex justify-between items-center bg-white/5 rounded-lg p-2">
                                <div>
                                    <span class="text-white text-sm">@payment.Date.ToString("MMM dd")</span>
                                    <span class="text-white/50 text-xs ml-2">@payment.PaymentMode</span>
                                </div>
                                <span class="text-emerald-400 font-medium">Rs.@payment.Amount.ToString("N2")</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Attendance Records Table -->
<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
    <div class="bg-white/10 px-6 py-4 border-b border-white/20">
        <h3 class="font-semibold text-white">
            <i class="fas fa-calendar-check mr-2 text-emerald-400"></i>
            Daily Attendance - @Model.MonthName @Model.SelectedYear
        </h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-white/10 border-b border-white/20">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Day</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-amber-400 uppercase">
                        <i class="fas fa-sun mr-1"></i>Breakfast
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-blue-400 uppercase">
                        <i class="fas fa-cloud-sun mr-1"></i>Lunch
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-purple-400 uppercase">
                        <i class="fas fa-moon mr-1"></i>Dinner
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-emerald-400 uppercase">Total</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/10">
                @if (Model.AttendanceRecords.Any())
                {
                    @foreach (var record in Model.AttendanceRecords)
                    {
                        var mealCount = (record.BreakfastPresent ? 1 : 0) + (record.LunchPresent ? 1 : 0) + (record.DinnerPresent ? 1 : 0);
                        <tr class="hover:bg-white/5">
                            <td class="px-6 py-4 text-white font-medium">@record.Date.ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4 text-white/70">@record.Date.ToString("dddd")</td>
                            <td class="px-6 py-4 text-center">
                                @if (record.BreakfastPresent)
                                {
                                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-amber-500/20 text-amber-400 border border-amber-500/30">
                                        <i class="fas fa-check"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-white/5 text-white/30 border border-white/10">
                                        <i class="fas fa-times"></i>
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-center">
                                @if (record.LunchPresent)
                                {
                                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-500/20 text-blue-400 border border-blue-500/30">
                                        <i class="fas fa-check"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-white/5 text-white/30 border border-white/10">
                                        <i class="fas fa-times"></i>
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-center">
                                @if (record.DinnerPresent)
                                {
                                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-purple-500/20 text-purple-400 border border-purple-500/30">
                                        <i class="fas fa-check"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-white/5 text-white/30 border border-white/10">
                                        <i class="fas fa-times"></i>
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-center">
                                <span class="px-3 py-1 rounded-full text-sm font-medium @(mealCount == 3 ? "bg-emerald-500/20 text-emerald-400 border border-emerald-500/30" : mealCount > 0 ? "bg-amber-500/20 text-amber-400 border border-amber-500/30" : "bg-red-500/20 text-red-400 border border-red-500/30")">
                                    @mealCount / 3
                                </span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-white/50">
                            <i class="fas fa-calendar-times text-4xl mb-3 block"></i>
                            No attendance records found for this month
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Legend -->
<div class="mt-4 flex flex-wrap gap-4 justify-center text-sm text-white/60">
    <div class="flex items-center gap-2">
        <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-amber-500/20 text-amber-400 border border-amber-500/30">
            <i class="fas fa-check text-xs"></i>
        </span>
        <span>Present</span>
    </div>
    <div class="flex items-center gap-2">
        <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-white/5 text-white/30 border border-white/10">
            <i class="fas fa-times text-xs"></i>
        </span>
        <span>Absent</span>
    </div>
</div>
