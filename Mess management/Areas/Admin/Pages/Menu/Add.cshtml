@page
@model MessManagement.Areas.Admin.Pages.Menu.AddModel
@{
    ViewData["Title"] = "Add Dish";
}

<style>
    select option {
        background-color: #1f2937;
        color: white;
    }
</style>

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="/Admin/Menu" class="text-emerald-400 hover:text-emerald-300 flex items-center transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Menu
        </a>
    </div>

    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6">
        <h2 class="text-xl font-semibold text-white mb-6">Add New Dish</h2>

        <form method="post">
            <div class="mb-4">
                <label class="block text-sm font-medium text-emerald-400 mb-1">Day of Week</label>
                <select asp-for="Input.DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()" class="w-full bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500"></select>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-emerald-400 mb-1">Meal Type</label>
                <select asp-for="Input.MealType" asp-items="Html.GetEnumSelectList<MessManagement.Models.MealType>()" class="w-full bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500"></select>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-emerald-400 mb-1">Dish Name</label>
                <input type="text" asp-for="Input.DishName" class="w-full bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                <span asp-validation-for="Input.DishName" class="text-red-400 text-sm"></span>
            </div>

            <div class="mb-6">
                <label class="block text-sm font-medium text-emerald-400 mb-1">Price</label>
                <div class="relative">
                    <span class="absolute left-3 top-2 text-white/50">Rs.</span>
                    <input type="number" step="0.01" asp-for="Input.Price" class="w-full bg-white/10 border border-white/20 rounded-xl pl-10 pr-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                </div>
                <span asp-validation-for="Input.Price" class="text-red-400 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white py-2 rounded-xl font-semibold transition-all shadow-lg">
                <i class="fas fa-plus mr-2"></i>
                Add Dish
            </button>
        </form>
    </div>
</div>