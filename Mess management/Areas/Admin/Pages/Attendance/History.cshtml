@page
@model MessManagement.Areas.Admin.Pages.Attendance.HistoryModel
@{
    ViewData["Title"] = "Attendance History";
}

<div class="mb-6 flex justify-between items-center">
    <div>
        <h1 class="text-2xl font-bold text-white">Attendance History</h1>
        <p class="text-white/60">View and download attendance records</p>
    </div>
    <a href="/Admin/Attendance/Mark" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-4 py-2 rounded-xl flex items-center transition-all shadow-lg">
        <i class="fas fa-calendar-check mr-2"></i>
        Mark Attendance
    </a>
</div>

<!-- Filter & Download Section -->
<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 mb-6">
    <div class="flex flex-wrap items-end justify-between gap-4">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div>
                <label class="block text-sm text-emerald-400 mb-1">Start Date</label>
                <input type="date" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500" />
            </div>
            <div>
                <label class="block text-sm text-emerald-400 mb-1">End Date</label>
                <input type="date" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500" />
            </div>
            <button type="submit" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-4 py-2 rounded-xl transition-all shadow-lg">
                <i class="fas fa-filter mr-2"></i>Filter
            </button>
        </form>
        
        <!-- Download PDF Button -->
        <form method="post" asp-page-handler="DownloadPdf">
            <input type="hidden" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
            <button type="submit" class="bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white px-4 py-2 rounded-xl transition-all shadow-lg flex items-center">
                <i class="fas fa-file-pdf mr-2"></i>Download PDF
            </button>
        </form>
    </div>
</div>

<!-- Summary Stats -->
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-gradient-to-br from-amber-500/20 to-orange-500/20 backdrop-blur-xl rounded-2xl border border-amber-500/30 p-4 text-center">
        <p class="text-amber-400 text-sm mb-1">‚òÄÔ∏è Breakfasts</p>
        <p class="text-2xl font-bold text-white">@Model.TotalBreakfasts</p>
    </div>
    <div class="bg-gradient-to-br from-blue-500/20 to-cyan-500/20 backdrop-blur-xl rounded-2xl border border-blue-500/30 p-4 text-center">
        <p class="text-blue-400 text-sm mb-1">üå§Ô∏è Lunches</p>
        <p class="text-2xl font-bold text-white">@Model.TotalLunches</p>
    </div>
    <div class="bg-gradient-to-br from-purple-500/20 to-pink-500/20 backdrop-blur-xl rounded-2xl border border-purple-500/30 p-4 text-center">
        <p class="text-purple-400 text-sm mb-1">üåô Dinners</p>
        <p class="text-2xl font-bold text-white">@Model.TotalDinners</p>
    </div>
    <div class="bg-gradient-to-br from-emerald-500/20 to-teal-500/20 backdrop-blur-xl rounded-2xl border border-emerald-500/30 p-4 text-center">
        <p class="text-emerald-400 text-sm mb-1">üçΩÔ∏è Total Meals</p>
        <p class="text-2xl font-bold text-white">@Model.TotalMeals</p>
    </div>
</div>

<!-- Attendance Table -->
<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-white/10 border-b border-white/20">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Date</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Member</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Room</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-amber-400 uppercase">‚òÄÔ∏è B'fast</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-blue-400 uppercase">üå§Ô∏è Lunch</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-purple-400 uppercase">üåô Dinner</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-emerald-400 uppercase">Meals</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-white/60 uppercase">Marked By</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/10">
                @if (Model.AttendanceRecords != null && Model.AttendanceRecords.Any())
                {
                    @foreach (var record in Model.AttendanceRecords)
                    {
                        <tr class="hover:bg-white/5">
                            <td class="px-4 py-3 text-white text-sm">@record.Date.ToString("dd MMM yyyy")</td>
                            <td class="px-4 py-3 font-medium text-white">@record.Member?.FullName</td>
                            <td class="px-4 py-3 text-white/70 text-sm">@record.Member?.RoomNumber</td>
                            <td class="px-4 py-3 text-center">
                                @if (record.BreakfastPresent)
                                {
                                    <span class="inline-flex items-center justify-center w-7 h-7 bg-amber-500/20 text-amber-400 rounded-full">
                                        <i class="fas fa-check text-xs"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center justify-center w-7 h-7 bg-red-500/20 text-red-400 rounded-full">
                                        <i class="fas fa-times text-xs"></i>
                                    </span>
                                }
                            </td>
                            <td class="px-4 py-3 text-center">
                                @if (record.LunchPresent)
                                {
                                    <span class="inline-flex items-center justify-center w-7 h-7 bg-blue-500/20 text-blue-400 rounded-full">
                                        <i class="fas fa-check text-xs"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center justify-center w-7 h-7 bg-red-500/20 text-red-400 rounded-full">
                                        <i class="fas fa-times text-xs"></i>
                                    </span>
                                }
                            </td>
                            <td class="px-4 py-3 text-center">
                                @if (record.DinnerPresent)
                                {
                                    <span class="inline-flex items-center justify-center w-7 h-7 bg-purple-500/20 text-purple-400 rounded-full">
                                        <i class="fas fa-check text-xs"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center justify-center w-7 h-7 bg-red-500/20 text-red-400 rounded-full">
                                        <i class="fas fa-times text-xs"></i>
                                    </span>
                                }
                            </td>
                            <td class="px-4 py-3 text-center">
                                @{
                                    var mealsCount = record.MealsAttended;
                                    var mealsBg = mealsCount == 3 ? "bg-emerald-500/20 text-emerald-400 border-emerald-500/30" 
                                                : mealsCount > 0 ? "bg-amber-500/20 text-amber-400 border-amber-500/30" 
                                                : "bg-red-500/20 text-red-400 border-red-500/30";
                                }
                                <span class="px-2 py-1 text-xs font-bold @mealsBg border rounded-full">
                                    @mealsCount/3
                                </span>
                            </td>
                            <td class="px-4 py-3 text-white/50 text-sm">@record.MarkedByUser?.Username</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="px-6 py-8 text-center text-white/50">
                            <i class="fas fa-calendar-times text-4xl mb-3 block"></i>
                            No records found for the selected date range
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>