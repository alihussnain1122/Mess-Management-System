@page
@model MessManagement.Areas.Admin.Pages.SendBillsModel
@{
    ViewData["Title"] = "Send Monthly Bills";
    Layout = "_AdminLayout";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Send Monthly Bills</h1>
                <p class="text-gray-500 mt-1">Email monthly bills to all members at once</p>
            </div>
            <div class="p-3 bg-blue-100 rounded-lg">
                <i class="fas fa-paper-plane text-2xl text-blue-600"></i>
            </div>
        </div>
    </div>

    <!-- Configuration Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-cog mr-2 text-indigo-500"></i>Bill Configuration
        </h2>
        
        <form method="post" id="sendBillsForm">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Month Selection -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Select Month</label>
                    <select asp-for="SelectedMonth" class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        @for (int m = 1; m <= 12; m++)
                        {
                            <option value="@m" selected="@(m == DateTime.Now.Month)">
                                @(new DateTime(2000, m, 1).ToString("MMMM"))
                            </option>
                        }
                    </select>
                </div>

                <!-- Year Selection -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Select Year</label>
                    <select asp-for="SelectedYear" class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                        {
                            <option value="@y" selected="@(y == DateTime.Now.Year)">@y</option>
                        }
                    </select>
                </div>

                <!-- Meal Rate -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Meal Rate (per day)</label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">Rs.</span>
                        <input type="number" asp-for="MealRate" step="0.01" 
                               class="w-full pl-10 rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                    </div>
                </div>

                <!-- Water Rate -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Water Rate (per bottle)</label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">Rs.</span>
                        <input type="number" asp-for="WaterRate" step="0.01" 
                               class="w-full pl-10 rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                    </div>
                </div>

                <!-- Tea Rate -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tea Rate (per cup)</label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">Rs.</span>
                        <input type="number" asp-for="TeaRate" step="0.01" 
                               class="w-full pl-10 rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                    </div>
                </div>
            </div>

            <!-- Member Selection -->
            <div class="mt-6">
                <div class="flex items-center justify-between mb-3">
                    <label class="block text-sm font-medium text-gray-700">Select Members</label>
                    <label class="flex items-center">
                        <input type="checkbox" id="selectAll" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                        <span class="ml-2 text-sm text-gray-600">Select All</span>
                    </label>
                </div>
                
                <div class="bg-gray-50 rounded-lg border border-gray-200 max-h-64 overflow-y-auto p-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                        @foreach (var member in Model.Members)
                        {
                            <label class="flex items-center p-2 bg-white rounded-lg border border-gray-200 hover:bg-gray-50 cursor-pointer">
                                <input type="checkbox" name="SelectedMemberIds" value="@member.MemberId" 
                                       class="member-checkbox rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
                                       @(string.IsNullOrEmpty(member.User?.Email) ? "disabled" : "")>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">@member.FullName</p>
                                    <p class="text-xs text-gray-500">
                                        Room @member.RoomNumber
                                        @if (string.IsNullOrEmpty(member.User?.Email))
                                        {
                                            <span class="text-red-500"> (No email)</span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">| @member.User.Email</span>
                                        }
                                    </p>
                                </div>
                            </label>
                        }
                    </div>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                    <i class="fas fa-info-circle mr-1"></i>
                    Members without email addresses are disabled
                </p>
            </div>

            <!-- Actions -->
            <div class="mt-6 flex items-center gap-4">
                <button type="submit" id="sendBtn" class="bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium py-2.5 px-6 rounded-lg transition duration-150 flex items-center">
                    <i class="fas fa-paper-plane mr-2"></i>
                    Send Bills to Selected Members
                </button>
                <a href="/Admin/Members" class="text-gray-600 hover:text-gray-800 font-medium">
                    Cancel
                </a>
            </div>
        </form>
    </div>

    <!-- Info Box -->
    <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
        <div class="flex">
            <i class="fas fa-lightbulb text-blue-500 mt-0.5 mr-3"></i>
            <div>
                <h3 class="text-sm font-medium text-blue-800">How it works</h3>
                <ul class="text-sm text-blue-600 mt-1 list-disc list-inside space-y-1">
                    <li>Select the month and year for the bill period</li>
                    <li>Configure the rates (meal, water, tea)</li>
                    <li>Select members to send bills to</li>
                    <li>Each member will receive a detailed bill email with their attendance, charges, and balance</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.member-checkbox:not(:disabled)');
            checkboxes.forEach(cb => cb.checked = this.checked);
        });

        document.getElementById('sendBillsForm').addEventListener('submit', function(e) {
            const selected = document.querySelectorAll('.member-checkbox:checked').length;
            if (selected === 0) {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'No Members Selected',
                    text: 'Please select at least one member to send bills.',
                    confirmButtonColor: '#4F46E5'
                });
                return;
            }
            
            const btn = document.getElementById('sendBtn');
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';
            btn.disabled = true;
        });
    </script>
}
