@page
@model MessManagement.Areas.Admin.Pages.SendBillsModel
@{
    ViewData["Title"] = "Send Bills";
}

<!-- Header -->
<div class="mb-6 flex justify-between items-center">
    <div>
        <h1 class="text-2xl font-bold text-white">Send Monthly Bills</h1>
        <p class="text-white/60">Email bills with PDF attachments to members</p>
    </div>
    <div class="flex items-center gap-2">
        <span class="px-3 py-1.5 bg-emerald-500/20 border border-emerald-500/30 text-emerald-300 text-xs font-medium rounded-full">
            <i class="fas fa-bolt mr-1"></i>Concurrent
        </span>
        <span class="px-3 py-1.5 bg-purple-500/20 border border-purple-500/30 text-purple-300 text-xs font-medium rounded-full">
            <i class="fas fa-file-pdf mr-1"></i>PDF
        </span>
        <span class="px-3 py-1.5 bg-blue-500/20 border border-blue-500/30 text-blue-300 text-xs font-medium rounded-full">
            <i class="fas fa-utensils mr-1"></i>Menu Prices
        </span>
    </div>
</div>

<form method="post" id="sendBillsForm">
    <!-- Billing Period -->
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 mb-6">
        <h2 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
            <i class="fas fa-calendar-alt text-emerald-400"></i>
            Billing Period
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-white/70 text-sm mb-2">Month</label>
                <select asp-for="SelectedMonth" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    @for (int m = 1; m <= 12; m++)
                    {
                        <option value="@m" class="bg-gray-800">@(new DateTime(2000, m, 1).ToString("MMMM"))</option>
                    }
                </select>
            </div>
            <div>
                <label class="block text-white/70 text-sm mb-2">Year</label>
                <select asp-for="SelectedYear" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                    {
                        <option value="@y" class="bg-gray-800">@y</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <!-- Info Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <!-- Menu Pricing Info -->
        <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-5">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-purple-500/30 rounded-xl flex items-center justify-center">
                    <i class="fas fa-utensils text-purple-400"></i>
                </div>
                <h3 class="text-white font-medium">Menu-Based Pricing</h3>
            </div>
            <p class="text-white/60 text-sm">
                Bills are calculated using actual menu prices for each day the member ate.
            </p>
        </div>

        <!-- Auto-Included Info -->
        <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-5">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-cyan-500/30 rounded-xl flex items-center justify-center">
                    <i class="fas fa-plus-circle text-cyan-400"></i>
                </div>
                <h3 class="text-white font-medium">Auto-Included</h3>
            </div>
            <div class="flex gap-4 text-sm">
                <span class="text-white/60">
                    <i class="fas fa-tint text-cyan-400 mr-1"></i>Water: <span class="text-emerald-400 font-medium">FREE</span>
                </span>
                <span class="text-white/60">
                    <i class="fas fa-mug-hot text-amber-400 mr-1"></i>Tea: <span class="text-amber-400 font-medium">Rs.100</span>
                </span>
            </div>
        </div>
    </div>

    <!-- Member Selection -->
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 mb-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-white flex items-center gap-2">
                <i class="fas fa-users text-emerald-400"></i>
                Select Members
            </h2>
            <div class="flex items-center gap-4">
                <span id="selectedCount" class="text-emerald-400 text-sm font-medium">0 selected</span>
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" id="selectAll" class="w-4 h-4 rounded border-white/30 bg-white/10 text-emerald-500 focus:ring-emerald-500">
                    <span class="text-white/70 text-sm">Select All</span>
                </label>
            </div>
        </div>
        
        <div class="bg-white/5 rounded-xl p-4 max-h-80 overflow-y-auto">
            @if (Model.Members.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                    @foreach (var member in Model.Members)
                    {
                        var hasEmail = !string.IsNullOrEmpty(member.User?.Email);
                        <label class="member-card flex items-center gap-3 p-3 bg-white/5 border border-white/10 rounded-xl cursor-pointer hover:bg-white/10 transition-all @(!hasEmail ? "opacity-50" : "")">
                            <input type="checkbox" name="SelectedMemberIds" value="@member.MemberId" 
                                   class="member-checkbox w-4 h-4 rounded border-white/30 bg-white/10 text-emerald-500 focus:ring-emerald-500"
                                   @(!hasEmail ? "disabled" : "")>
                            <div class="flex-1 min-w-0">
                                <p class="text-white font-medium text-sm truncate">@member.FullName</p>
                                <p class="text-white/50 text-xs truncate">
                                    Room @member.RoomNumber
                                    @if (!hasEmail)
                                    {
                                        <span class="text-red-400 ml-1">(No email)</span>
                                    }
                                </p>
                            </div>
                            @if (hasEmail)
                            {
                                <i class="fas fa-envelope text-white/30 text-xs"></i>
                            }
                        </label>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <i class="fas fa-users-slash text-white/30 text-4xl mb-3"></i>
                    <p class="text-white/50">No active members found</p>
                </div>
            }
        </div>
        <p class="mt-3 text-white/40 text-xs flex items-center gap-1">
            <i class="fas fa-info-circle"></i>
            Members without email addresses cannot receive bills
        </p>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-between">
        <a href="/Admin/Dashboard" class="bg-white/10 hover:bg-white/20 border border-white/20 text-white px-6 py-3 rounded-xl font-medium transition-all">
            Cancel
        </a>
        <button type="submit" id="sendBtn" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-8 py-3 rounded-xl font-medium flex items-center gap-2 transition-all shadow-lg">
            <i class="fas fa-paper-plane"></i>
            Send Bills with PDF
        </button>
    </div>
</form>

