@page
@model MessManagement.Areas.Admin.Pages.ExportsModel
@{
    ViewData["Title"] = "Data Exports";
    Layout = "_AdminLayout";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Data Exports</h1>
                <p class="text-gray-500 mt-1">Export your data to Excel spreadsheets</p>
            </div>
            <div class="p-3 bg-indigo-100 rounded-lg">
                <i class="fas fa-file-excel text-2xl text-indigo-600"></i>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Members Export -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="flex items-center mb-4">
                <div class="p-3 bg-blue-100 rounded-lg mr-4">
                    <i class="fas fa-users text-xl text-blue-600"></i>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-900">Members Export</h2>
                    <p class="text-sm text-gray-500">Export all member information</p>
                </div>
            </div>
            <p class="text-gray-600 text-sm mb-4">
                Includes member details, room numbers, contact information, join dates, and status.
            </p>
            <form method="post" asp-page-handler="ExportMembers">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 px-4 rounded-lg transition duration-150 flex items-center justify-center">
                    <i class="fas fa-download mr-2"></i>
                    Download Members Excel
                </button>
            </form>
        </div>

        <!-- Payments Export -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="flex items-center mb-4">
                <div class="p-3 bg-green-100 rounded-lg mr-4">
                    <i class="fas fa-money-bill-wave text-xl text-green-600"></i>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-900">Payments Export</h2>
                    <p class="text-sm text-gray-500">Export payment records</p>
                </div>
            </div>
            <form method="post" asp-page-handler="ExportPayments" class="space-y-4">
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                        <input type="date" name="startDate" asp-for="PaymentStartDate" 
                               class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                        <input type="date" name="endDate" asp-for="PaymentEndDate"
                               class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                    </div>
                </div>
                <p class="text-xs text-gray-500">Leave dates empty to export all payments</p>
                <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2.5 px-4 rounded-lg transition duration-150 flex items-center justify-center">
                    <i class="fas fa-download mr-2"></i>
                    Download Payments Excel
                </button>
            </form>
        </div>

        <!-- Attendance Export -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="flex items-center mb-4">
                <div class="p-3 bg-purple-100 rounded-lg mr-4">
                    <i class="fas fa-calendar-check text-xl text-purple-600"></i>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-900">Attendance Export</h2>
                    <p class="text-sm text-gray-500">Export monthly attendance records</p>
                </div>
            </div>
            <form method="post" asp-page-handler="ExportAttendance" class="space-y-4">
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Month</label>
                        <select name="attendanceMonth" asp-for="AttendanceMonth"
                                class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                            @for (int m = 1; m <= 12; m++)
                            {
                                <option value="@m" selected="@(m == DateTime.Now.Month)">
                                    @(new DateTime(2000, m, 1).ToString("MMMM"))
                                </option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Year</label>
                        <select name="attendanceYear" asp-for="AttendanceYear"
                                class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                            @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 3; y--)
                            {
                                <option value="@y" selected="@(y == DateTime.Now.Year)">@y</option>
                            }
                        </select>
                    </div>
                </div>
                <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-4 rounded-lg transition duration-150 flex items-center justify-center">
                    <i class="fas fa-download mr-2"></i>
                    Download Attendance Excel
                </button>
            </form>
        </div>

        <!-- Monthly Report Export -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="flex items-center mb-4">
                <div class="p-3 bg-amber-100 rounded-lg mr-4">
                    <i class="fas fa-chart-bar text-xl text-amber-600"></i>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-900">Monthly Report Export</h2>
                    <p class="text-sm text-gray-500">Comprehensive monthly summary</p>
                </div>
            </div>
            <form method="post" asp-page-handler="ExportMonthlyReport" class="space-y-4">
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Month</label>
                        <select name="reportMonth" asp-for="ReportMonth"
                                class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                            @for (int m = 1; m <= 12; m++)
                            {
                                <option value="@m" selected="@(m == DateTime.Now.Month)">
                                    @(new DateTime(2000, m, 1).ToString("MMMM"))
                                </option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Year</label>
                        <select name="reportYear" asp-for="ReportYear"
                                class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                            @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 3; y--)
                            {
                                <option value="@y" selected="@(y == DateTime.Now.Year)">@y</option>
                            }
                        </select>
                    </div>
                </div>
                <p class="text-xs text-gray-500">Includes attendance, charges, payments, and balance for all members</p>
                <button type="submit" class="w-full bg-amber-600 hover:bg-amber-700 text-white font-medium py-2.5 px-4 rounded-lg transition duration-150 flex items-center justify-center">
                    <i class="fas fa-download mr-2"></i>
                    Download Monthly Report Excel
                </button>
            </form>
        </div>
    </div>

    <!-- Export Info -->
    <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
        <div class="flex">
            <i class="fas fa-info-circle text-blue-500 mt-0.5 mr-3"></i>
            <div>
                <h3 class="text-sm font-medium text-blue-800">About Excel Exports</h3>
                <p class="text-sm text-blue-600 mt-1">
                    All exports are generated as .xlsx files compatible with Microsoft Excel, Google Sheets, and other spreadsheet applications.
                    The files include formatted headers, data validation, and summary calculations where applicable.
                </p>
            </div>
        </div>
    </div>
</div>
