@page
@model MessManagement.Areas.Admin.Pages.Reports.MonthlyModel
@{
    ViewData["Title"] = "Monthly Report";
}

<div class="mb-6 flex justify-between items-center">
    <div>
        <h1 class="text-2xl font-bold text-white">Monthly Report</h1>
        <p class="text-white/60">View monthly statistics</p>
    </div>
    <div class="flex gap-2">
        <a href="/Admin/Reports/Monthly?handler=Download&month=@Model.SelectedMonth&year=@Model.SelectedYear" class="bg-gradient-to-r from-blue-500 to-indigo-500 hover:from-blue-600 hover:to-indigo-600 text-white px-4 py-2 rounded-xl flex items-center transition-all shadow-lg">
            <i class="fas fa-file-csv mr-2"></i>
            CSV
        </a>
        <a href="/Admin/Reports/Monthly?handler=DownloadPdf&month=@Model.SelectedMonth&year=@Model.SelectedYear" class="bg-gradient-to-r from-red-500 to-rose-500 hover:from-red-600 hover:to-rose-600 text-white px-4 py-2 rounded-xl flex items-center transition-all shadow-lg">
            <i class="fas fa-file-pdf mr-2"></i>
            PDF
        </a>
    </div>
</div>

<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 mb-6">
    <form method="get" class="flex items-end gap-4">
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Month</label>
            <select name="month" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(Model.SelectedMonth == i)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Year</label>
            <select name="year" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                {
                    <option value="@y" selected="@(Model.SelectedYear == y)">@y</option>
                }
            </select>
        </div>
        <button type="submit" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-4 py-2 rounded-xl transition-all shadow-lg">View</button>
    </form>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 text-center">
        <p class="text-sm text-white/60">Active Members</p>
        <p class="text-2xl font-bold text-white">@Model.Report.TotalActiveMembers</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 text-center">
        <p class="text-sm text-white/60">Total Present Days</p>
        <p class="text-2xl font-bold text-emerald-400">@Model.Report.TotalPresentDays</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 text-center">
        <p class="text-sm text-white/60">Total Absent Days</p>
        <p class="text-2xl font-bold text-red-400">@Model.Report.TotalAbsentDays</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 text-center">
        <p class="text-sm text-white/60">Revenue</p>
        <p class="text-2xl font-bold text-purple-400">Rs.@Model.Report.TotalRevenue.ToString("N2")</p>
    </div>
</div>

<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6">
    <h3 class="text-lg font-semibold text-white mb-4">Summary</h3>
    <div class="grid grid-cols-2 gap-4">
        <div class="p-4 bg-white/10 border border-white/20 rounded-xl">
            <p class="text-sm text-white/60">Average Daily Cost</p>
            <p class="text-xl font-bold text-white">Rs.@Model.Report.AverageDailyCost.ToString("N2")</p>
        </div>
        <div class="p-4 bg-white/10 border border-white/20 rounded-xl">
            <p class="text-sm text-white/60">Expected Revenue</p>
            <p class="text-xl font-bold text-white">Rs.@Model.Report.ExpectedRevenue.ToString("N2")</p>
        </div>
    </div>
</div>