@page
@model MessManagement.Areas.Admin.Pages.Reports.MemberSummaryModel
@{
    ViewData["Title"] = "Member Summary";
}

<div class="mb-6 flex justify-between items-center">
    <div>
        <h1 class="text-2xl font-bold text-white">Member Cost Summary</h1>
        <p class="text-white/60">View cost breakdown for all members</p>
    </div>
    <a href="/Admin/Reports/MemberSummary?handler=Download&month=@Model.SelectedMonth&year=@Model.SelectedYear" class="bg-gradient-to-r from-blue-500 to-indigo-500 hover:from-blue-600 hover:to-indigo-600 text-white px-4 py-2 rounded-xl flex items-center transition-all shadow-lg">
        <i class="fas fa-download mr-2"></i>
        Download CSV
    </a>
</div>

<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 mb-6">
    <form method="get" class="flex items-end gap-4">
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Month</label>
            <select name="month" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(Model.SelectedMonth == i)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Year</label>
            <select name="year" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                {
                    <option value="@y" selected="@(Model.SelectedYear == y)">@y</option>
                }
            </select>
        </div>
        <button type="submit" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-4 py-2 rounded-xl transition-all shadow-lg">View</button>
    </form>
</div>

<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
    <table class="w-full">
        <thead class="bg-white/10 border-b border-white/20">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Member</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Room</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-emerald-400 uppercase">Present</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-emerald-400 uppercase">Meal Cost</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-emerald-400 uppercase">Total</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-emerald-400 uppercase">Paid</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-emerald-400 uppercase">Balance</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-white/10">
            @if (Model.MemberBreakdowns != null && Model.MemberBreakdowns.Any())
            {
                @foreach (var breakdown in Model.MemberBreakdowns)
                {
                    <tr class="hover:bg-white/5">
                        <td class="px-6 py-4 font-medium text-white">@breakdown.MemberName</td>
                        <td class="px-6 py-4 text-white/70">@breakdown.RoomNumber</td>
                        <td class="px-6 py-4 text-right text-white">@breakdown.TotalPresentDays</td>
                        <td class="px-6 py-4 text-right text-white">Rs.@breakdown.MealCost.ToString("N2")</td>
                        <td class="px-6 py-4 text-right font-semibold text-white">Rs.@breakdown.TotalCost.ToString("N2")</td>
                        <td class="px-6 py-4 text-right text-emerald-400">Rs.@breakdown.TotalPaid.ToString("N2")</td>
                        <td class="px-6 py-4 text-right @(breakdown.BalanceDue > 0 ? "text-red-400" : "text-emerald-400")">
                            Rs.@breakdown.BalanceDue.ToString("N2")
                        </td>
                    </tr>
                }
                <tr class="bg-white/10 font-semibold">
                    <td colspan="3" class="px-6 py-4 text-white">Total</td>
                    <td class="px-6 py-4 text-right text-white">Rs.@Model.MemberBreakdowns.Sum(m => m.MealCost).ToString("N2")</td>
                    <td class="px-6 py-4 text-right text-white">Rs.@Model.MemberBreakdowns.Sum(m => m.TotalCost).ToString("N2")</td>
                    <td class="px-6 py-4 text-right text-emerald-400">Rs.@Model.MemberBreakdowns.Sum(m => m.TotalPaid).ToString("N2")</td>
                    <td class="px-6 py-4 text-right text-red-400">Rs.@Model.MemberBreakdowns.Sum(m => m.BalanceDue).ToString("N2")</td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="7" class="px-6 py-8 text-center text-white/50">No data available</td>
                </tr>
            }
        </tbody>
    </table>
</div>