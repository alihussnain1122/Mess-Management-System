@page
@model MessManagement.Areas.Admin.Pages.Payments.AddModel
@{
    ViewData["Title"] = "Add Payment";
}

<style>
    select option {
        background-color: #1f2937;
        color: white;
    }
    .input-validation-error {
        border-color: rgb(239, 68, 68) !important;
        background-color: rgba(239, 68, 68, 0.1) !important;
    }
    .field-validation-error {
        color: rgb(248, 113, 113);
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="/Admin/Payments" class="text-emerald-400 hover:text-emerald-300 flex items-center transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Payments
        </a>
    </div>

    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6">
        <h2 class="text-xl font-semibold text-white mb-6">
            <i class="fas fa-credit-card mr-2 text-emerald-400"></i>Record Payment
        </h2>

        <div asp-validation-summary="ModelOnly" class="bg-red-500/15 border border-red-500/30 rounded-xl p-4 mb-4 text-red-400"></div>

        <form method="post" id="paymentForm">
            <div class="mb-4 form-group">
                <label asp-for="Input.MemberId" class="block text-sm font-medium text-emerald-400 mb-1">
                    Member <span class="text-red-400">*</span>
                </label>
                <select asp-for="Input.MemberId" asp-items="Model.MemberList" 
                        class="w-full bg-white/10 border border-white/20 rounded-xl px-3 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-all">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Input.MemberId" class="field-validation-error"></span>
            </div>

            <div class="mb-4 form-group">
                <label asp-for="Input.Amount" class="block text-sm font-medium text-emerald-400 mb-1">
                    Amount <span class="text-red-400">*</span>
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-white/50 font-semibold">Rs.</span>
                    <input type="number" step="0.01" min="1" max="100000" asp-for="Input.Amount" 
                           placeholder="Enter amount"
                           class="w-full bg-white/10 border border-white/20 rounded-xl pl-12 pr-3 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-all" />
                </div>
                <span asp-validation-for="Input.Amount" class="field-validation-error"></span>
                <p class="text-white/40 text-xs mt-1">Amount between Rs.1 and Rs.100,000</p>
            </div>

            <div class="mb-4 form-group">
                <label asp-for="Input.PaymentMode" class="block text-sm font-medium text-emerald-400 mb-1">
                    Payment Mode <span class="text-red-400">*</span>
                </label>
                <select asp-for="Input.PaymentMode" asp-items="Html.GetEnumSelectList<MessManagement.Models.PaymentMode>()" 
                        class="w-full bg-white/10 border border-white/20 rounded-xl px-3 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-all"></select>
                <span asp-validation-for="Input.PaymentMode" class="field-validation-error"></span>
            </div>

            <div class="mb-6 form-group">
                <label asp-for="Input.Notes" class="block text-sm font-medium text-emerald-400 mb-1">Notes (Optional)</label>
                <textarea asp-for="Input.Notes" rows="3" maxlength="500" placeholder="Add any relevant notes..."
                          class="w-full bg-white/10 border border-white/20 rounded-xl px-3 py-3 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-all"></textarea>
                <span asp-validation-for="Input.Notes" class="field-validation-error"></span>
                <p class="text-white/40 text-xs mt-1">Maximum 500 characters</p>
            </div>

            <div class="p-4 bg-blue-500/10 border border-blue-500/30 rounded-xl mb-4">
                <p class="text-sm text-blue-300">
                    <i class="fas fa-info-circle mr-1"></i>
                    <strong>Note:</strong> Payments recorded by admin are automatically marked as <span class="text-emerald-400 font-semibold">Completed</span>.
                </p>
            </div>

            <button type="submit" id="submitBtn" class="w-full bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white py-3 rounded-xl font-semibold transition-all shadow-lg">
                <span class="btn-text"><i class="fas fa-save mr-2"></i>Record Payment</span>
                <span class="btn-spinner hidden"><i class="fas fa-spinner fa-spin mr-2"></i>Recording...</span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('paymentForm').addEventListener('submit', function(e) {
            const memberId = document.querySelector('[name="Input.MemberId"]').value;
            const amount = parseFloat(document.querySelector('[name="Input.Amount"]').value);
            
            if (!memberId || memberId === '') {
                e.preventDefault();
                Toast.error('Please select a member');
                return;
            }
            
            if (!amount || amount < 1 || amount > 100000) {
                e.preventDefault();
                Toast.error('Please enter a valid amount (Rs.1 - Rs.100,000)');
                return;
            }
            
            const btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.classList.add('opacity-75', 'cursor-not-allowed');
            btn.querySelector('.btn-text').classList.add('hidden');
            btn.querySelector('.btn-spinner').classList.remove('hidden');
        });
    </script>
}