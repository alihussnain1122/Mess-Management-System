@page
@model MessManagement.Areas.User.Pages.Payments.PayNowModel
@{
    ViewData["Title"] = "Make Payment";
}

<div class="mb-6">
    <h1 class="text-2xl font-bold text-white"><i class="fas fa-credit-card mr-3 text-emerald-400"></i>Make Payment</h1>
    <p class="text-white/60">Pay your mess dues securely</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Payment Summary -->
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6">
        <h3 class="text-lg font-semibold text-white mb-4"><i class="fas fa-receipt mr-2 text-blue-400"></i>Payment Summary</h3>
        <div class="space-y-3">
            <div class="flex justify-between items-center p-3 bg-white/10 border border-white/10 rounded-xl">
                <span class="text-white/70">This Month's Cost</span>
                <span class="font-semibold text-white">Rs.@Model.MonthCost.ToString("N2")</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-white/10 border border-white/10 rounded-xl">
                <span class="text-white/70">Already Paid</span>
                <span class="font-semibold text-emerald-400">Rs.@Model.TotalPaid.ToString("N2")</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-emerald-500/10 rounded-xl border border-emerald-500/30">
                <span class="font-semibold text-emerald-400">Balance Due</span>
                <span class="font-bold text-xl @(Model.BalanceDue > 0 ? "text-red-400" : "text-emerald-400")">Rs.@Model.BalanceDue.ToString("N2")</span>
            </div>
        </div>
        
        @if (Model.BalanceDue <= 0)
        {
            <div class="mt-4 p-4 bg-emerald-500/20 border border-emerald-500/30 rounded-xl text-center">
                <i class="fas fa-check-circle text-4xl text-emerald-400 mb-2"></i>
                <p class="text-emerald-300 font-semibold">All dues paid!</p>
                <p class="text-white/60 text-sm">You have no pending payments.</p>
            </div>
        }
    </div>

    <!-- Unified Payment Form -->
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 @(Model.BalanceDue <= 0 ? "opacity-50 pointer-events-none" : "")">
        <h3 class="text-lg font-semibold text-white mb-4"><i class="fas fa-wallet mr-2 text-emerald-400"></i>Choose Payment Method</h3>
        
        @if (Model.BalanceDue <= 0)
        {
            <div class="mb-4 p-4 bg-blue-500/20 border border-blue-500/30 rounded-xl text-center">
                <i class="fas fa-info-circle text-2xl text-blue-400 mb-2"></i>
                <p class="text-blue-300 font-semibold">No Payment Required</p>
                <p class="text-white/60 text-sm">You have no outstanding dues at this time.</p>
            </div>
        }
        
        <form method="post" id="paymentForm">
            <fieldset @(Model.BalanceDue <= 0 ? "disabled" : "")>
            <div class="space-y-4">
                <!-- Amount Input -->
                <div class="form-group">
                    <label class="block text-sm font-medium text-emerald-400 mb-1">
                        Amount (Rs.) <span class="text-red-400">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-white/50 font-semibold">Rs.</span>
                        <input type="number" name="Amount" id="amountInput" step="0.01" min="1" max="100000" 
                               value="@(Model.BalanceDue > 0 ? Model.BalanceDue : 0)" required 
                               class="w-full bg-white/10 border border-white/20 rounded-xl pl-12 pr-3 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-all" />
                    </div>
                </div>

                <!-- Payment Method Selection -->
                <div class="form-group">
                    <label class="block text-sm font-medium text-emerald-400 mb-2">
                        Payment Method <span class="text-red-400">*</span>
                    </label>
                    <div class="grid grid-cols-1 gap-3">
                        <!-- Online Payment Option -->
                        <label class="payment-option cursor-pointer">
                            <input type="radio" name="PaymentType" value="Online" class="hidden" id="onlinePayment">
                            <div class="relative p-4 bg-gradient-to-r from-indigo-500/20 to-purple-500/20 border-2 border-indigo-500/30 rounded-xl transition-all hover:border-indigo-400 peer-checked:border-indigo-400">
                                <div class="absolute top-2 right-2 bg-emerald-500 text-white text-[10px] px-2 py-0.5 rounded-full font-semibold">
                                    <i class="fas fa-star mr-1"></i>RECOMMENDED
                                </div>
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 bg-indigo-500/30 rounded-xl flex items-center justify-center">
                                        <i class="fab fa-stripe text-xl text-indigo-400"></i>
                                    </div>
                                    <div class="flex-1">
                                        <span class="text-white font-semibold">ðŸ’³ Pay Online (Stripe)</span>
                                        <p class="text-white/50 text-xs mt-0.5">Instant â€¢ No approval needed â€¢ Secure</p>
                                    </div>
                                    <div class="flex gap-1">
                                        <i class="fab fa-cc-visa text-white/40"></i>
                                        <i class="fab fa-cc-mastercard text-white/40"></i>
                                    </div>
                                </div>
                            </div>
                        </label>

                        <!-- Cash Payment Option -->
                        <label class="payment-option cursor-pointer">
                            <input type="radio" name="PaymentType" value="Cash" class="hidden" id="cashPayment">
                            <div class="p-4 bg-amber-500/10 border-2 border-amber-500/30 rounded-xl transition-all hover:border-amber-400">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 bg-amber-500/30 rounded-xl flex items-center justify-center">
                                        <i class="fas fa-money-bill-wave text-xl text-amber-400"></i>
                                    </div>
                                    <div class="flex-1">
                                        <span class="text-white font-semibold">ðŸ’µ Cash Payment</span>
                                        <p class="text-white/50 text-xs mt-0.5">Manual â€¢ Requires admin approval (1-24 hrs)</p>
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Notes (Only for Cash) -->
                <div class="form-group hidden" id="notesGroup">
                    <label class="block text-sm font-medium text-amber-400 mb-1">Notes (Optional)</label>
                    <input type="text" name="TransactionId" id="notesInput" placeholder="Any additional notes for admin"
                           class="w-full bg-white/10 border border-white/20 rounded-xl px-3 py-3 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-amber-500 transition-all" />
                </div>

                <!-- Hidden field for actual payment method -->
                <input type="hidden" name="PaymentMethod" id="paymentMethodHidden" value="">

                <!-- Submit Button -->
                <button type="submit" id="submitBtn" disabled class="w-full bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 disabled:from-gray-500 disabled:to-gray-600 disabled:cursor-not-allowed text-white py-3 rounded-xl font-semibold transition-all shadow-lg">
                    <span class="btn-text"><i class="fas fa-arrow-right mr-2"></i>Select Payment Method</span>
                    <span class="btn-spinner hidden"><i class="fas fa-spinner fa-spin mr-2"></i>Processing...</span>
                </button>
            </div>
            </fieldset>
        </form>

        <!-- Payment Info -->
        <div class="mt-4 p-3 bg-white/5 border border-white/10 rounded-xl">
            <div class="flex items-start gap-2">
                <i class="fas fa-shield-alt text-emerald-400 mt-0.5"></i>
                <div>
                    <p class="text-white/80 text-sm font-medium">Secure Payment</p>
                    <p class="text-white/50 text-xs">All transactions are encrypted and secure</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const onlinePayment = document.getElementById('onlinePayment');
        const cashPayment = document.getElementById('cashPayment');
        const notesGroup = document.getElementById('notesGroup');
        const submitBtn = document.getElementById('submitBtn');
        const btnText = submitBtn.querySelector('.btn-text');
        const paymentMethodHidden = document.getElementById('paymentMethodHidden');
        const amountInput = document.getElementById('amountInput');

        // Payment option selection styling and logic
        function selectPaymentOption(option) {
            // Remove selection from all
            document.querySelectorAll('.payment-option > div').forEach(el => {
                el.classList.remove('border-indigo-400', 'border-amber-400', 'ring-2', 'ring-indigo-500/50', 'ring-amber-500/50');
            });

            if (option === 'Online') {
                const selectedDiv = onlinePayment.closest('label').querySelector('div');
                selectedDiv.classList.add('border-indigo-400', 'ring-2', 'ring-indigo-500/50');
                notesGroup.classList.add('hidden');
                paymentMethodHidden.value = 'Stripe';
                submitBtn.disabled = false;
                submitBtn.classList.remove('from-gray-500', 'to-gray-600');
                submitBtn.classList.add('from-indigo-600', 'to-purple-600', 'hover:from-indigo-700', 'hover:to-purple-700');
                btnText.innerHTML = '<i class="fab fa-stripe mr-2"></i>Pay with Stripe';
            } else if (option === 'Cash') {
                const selectedDiv = cashPayment.closest('label').querySelector('div');
                selectedDiv.classList.add('border-amber-400', 'ring-2', 'ring-amber-500/50');
                notesGroup.classList.remove('hidden');
                paymentMethodHidden.value = 'Cash';
                submitBtn.disabled = false;
                submitBtn.classList.remove('from-gray-500', 'to-gray-600', 'from-indigo-600', 'to-purple-600', 'hover:from-indigo-700', 'hover:to-purple-700');
                submitBtn.classList.add('from-amber-500', 'to-orange-500', 'hover:from-amber-600', 'hover:to-orange-600');
                btnText.innerHTML = '<i class="fas fa-paper-plane mr-2"></i>Submit Cash Request';
            }
        }

        onlinePayment.addEventListener('change', () => selectPaymentOption('Online'));
        cashPayment.addEventListener('change', () => selectPaymentOption('Cash'));

        // Form submission
        document.getElementById('paymentForm').addEventListener('submit', function(e) {
            const amount = parseFloat(amountInput.value);
            const paymentType = document.querySelector('input[name="PaymentType"]:checked')?.value;
            
            // Validate amount
            if (!amount || amount < 1) {
                e.preventDefault();
                Toast.error('Please enter a valid amount (minimum Rs.1)');
                return;
            }
            
            if (amount > 100000) {
                e.preventDefault();
                Toast.error('Amount cannot exceed Rs.100,000');
                return;
            }
            
            // Validate payment method selection
            if (!paymentType) {
                e.preventDefault();
                Toast.error('Please select a payment method');
                return;
            }

            // If Online payment, redirect to Stripe
            if (paymentType === 'Online') {
                e.preventDefault();
                window.location.href = '/User/Payments/StripeCheckout?Amount=' + amount;
                return;
            }
            
            // For Cash payment, show loading state
            submitBtn.disabled = true;
            submitBtn.classList.add('opacity-75', 'cursor-not-allowed');
            btnText.classList.add('hidden');
            submitBtn.querySelector('.btn-spinner').classList.remove('hidden');
        });

        // Real-time amount validation
        amountInput.addEventListener('input', function() {
            const value = parseFloat(this.value);
            if (value < 1 || value > 100000) {
                this.classList.add('border-red-500', 'bg-red-500/10');
                this.classList.remove('border-white/20');
            } else {
                this.classList.remove('border-red-500', 'bg-red-500/10');
                this.classList.add('border-white/20');
            }
        });
    </script>
}