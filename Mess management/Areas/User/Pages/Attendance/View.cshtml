@page
@model MessManagement.Areas.User.Pages.Attendance.ViewModel
@{
    ViewData["Title"] = "My Attendance";
}

<div class="mb-6">
    <h1 class="text-2xl font-bold text-white">My Attendance</h1>
    <p class="text-white/60">View your attendance history</p>
</div>

<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 mb-6">
    <form method="get" class="flex items-end gap-4">
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Month</label>
            <select name="month" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(Model.SelectedMonth == i)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Year</label>
            <select name="year" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                {
                    <option value="@y" selected="@(Model.SelectedYear == y)">@y</option>
                }
            </select>
        </div>
        <button type="submit" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-4 py-2 rounded-xl transition-all shadow-lg">View</button>
    </form>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 text-center">
        <p class="text-sm text-white/60">Present Days</p>
        <p class="text-2xl font-bold text-emerald-400">@Model.PresentCount</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 text-center">
        <p class="text-sm text-white/60">Absent Days</p>
        <p class="text-2xl font-bold text-red-400">@Model.AbsentCount</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-6 text-center">
        <p class="text-sm text-white/60">Attendance Rate</p>
        <p class="text-2xl font-bold text-blue-400">@Model.AttendanceRate.ToString("N1")%</p>
    </div>
</div>

<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
    <table class="w-full">
        <thead class="bg-white/10 border-b border-white/20">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Day</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-emerald-400 uppercase">Status</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-white/10">
            @if (Model.AttendanceRecords != null && Model.AttendanceRecords.Any())
            {
                @foreach (var record in Model.AttendanceRecords.OrderByDescending(a => a.Date))
                {
                    <tr class="hover:bg-white/5">
                        <td class="px-6 py-4 text-white">@record.Date.ToString("MMM dd, yyyy")</td>
                        <td class="px-6 py-4 text-white/70">@record.Date.ToString("dddd")</td>
                        <td class="px-6 py-4 text-center">
                            @if (record.Status == MessManagement.Models.AttendanceStatus.Present)
                            {
                                <span class="px-3 py-1 rounded-full text-xs font-medium bg-emerald-500/20 text-emerald-400 border border-emerald-500/30">
                                    <i class="fas fa-check mr-1"></i>Present
                                </span>
                            }
                            else
                            {
                                <span class="px-3 py-1 rounded-full text-xs font-medium bg-red-500/20 text-red-400 border border-red-500/30">
                                    <i class="fas fa-times mr-1"></i>Absent
                                </span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="px-6 py-8 text-center text-white/50">No attendance records found</td>
                </tr>
            }
        </tbody>
    </table>
</div>