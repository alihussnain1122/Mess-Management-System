@page
@model MessManagement.Areas.User.Pages.MyBillModel
@{
    ViewData["Title"] = "My Bills";
}

<div class="mb-6">
    <h1 class="text-2xl font-bold text-white">My Monthly Bills</h1>
    <p class="text-white/60">View your monthly charges, dishes eaten, and payment summary</p>
</div>

<!-- Month/Year Selection -->
<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 mb-6">
    <form method="get" class="flex flex-wrap items-end gap-4">
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Month</label>
            <select name="month" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(Model.SelectedMonth == i)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-sm text-emerald-400 mb-1">Year</label>
            <select name="year" class="bg-white/10 border border-white/20 rounded-xl px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500">
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                {
                    <option value="@y" selected="@(Model.SelectedYear == y)">@y</option>
                }
            </select>
        </div>
        <button type="submit" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-4 py-2 rounded-xl transition-all shadow-lg">
            <i class="fas fa-search mr-2"></i>View Bill
        </button>
    </form>
</div>

<!-- Bill Summary Card -->
<div class="bg-gradient-to-br from-indigo-600 to-purple-700 rounded-2xl p-6 mb-6 shadow-xl">
    <div class="flex justify-between items-start mb-4">
        <div>
            <h2 class="text-white/80 text-sm">Bill Statement</h2>
            <p class="text-2xl font-bold text-white">@Model.MonthName @Model.SelectedYear</p>
        </div>
        <div class="text-right">
            <p class="text-white/80 text-sm">Member</p>
            <p class="text-white font-semibold">@Model.MemberName</p>
            <p class="text-white/60 text-sm">Room: @Model.RoomNumber</p>
        </div>
    </div>
    <div class="border-t border-white/20 pt-4">
        <div class="flex justify-between items-center">
            <span class="text-white/80">Total Amount Due</span>
            <span class="text-3xl font-bold text-white">Rs. @Model.GrandTotal.ToString("N2")</span>
        </div>
    </div>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-white/60 text-sm">üç≥ Breakfast</p>
        <p class="text-2xl font-bold text-amber-400">@Model.BreakfastCount</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-white/60 text-sm">üçõ Lunch</p>
        <p class="text-2xl font-bold text-blue-400">@Model.LunchCount</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-white/60 text-sm">üçΩÔ∏è Dinner</p>
        <p class="text-2xl font-bold text-purple-400">@Model.DinnerCount</p>
    </div>
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 p-4 text-center">
        <p class="text-white/60 text-sm">üìä Total Meals</p>
        <p class="text-2xl font-bold text-emerald-400">@Model.TotalMeals</p>
    </div>
</div>

<!-- Auto-included Info -->
<div class="bg-gradient-to-r from-cyan-500/10 to-amber-500/10 rounded-2xl border border-white/20 p-4 mb-6">
    <div class="flex items-center gap-2 mb-3">
        <i class="fas fa-info-circle text-cyan-400"></i>
        <span class="text-white font-medium">Included with Every Meal</span>
    </div>
    <div class="grid grid-cols-2 gap-4">
        <div class="flex items-center gap-3 bg-white/5 rounded-lg p-3">
            <div class="w-10 h-10 bg-cyan-500/20 rounded-full flex items-center justify-center">
                <i class="fas fa-tint text-cyan-400"></i>
            </div>
            <div>
                <p class="text-white font-medium">Water</p>
                <p class="text-emerald-400 text-sm">FREE</p>
            </div>
        </div>
        <div class="flex items-center gap-3 bg-white/5 rounded-lg p-3">
            <div class="w-10 h-10 bg-amber-500/20 rounded-full flex items-center justify-center">
                <i class="fas fa-mug-hot text-amber-400"></i>
            </div>
            <div>
                <p class="text-white font-medium">Tea/Coffee</p>
                <p class="text-amber-400 text-sm">Rs.100/meal</p>
            </div>
        </div>
    </div>
</div>

<!-- Charges Breakdown -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Charges Table -->
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
        <div class="bg-white/10 px-6 py-4 border-b border-white/20">
            <h3 class="font-semibold text-white">
                <i class="fas fa-receipt mr-2 text-emerald-400"></i>Charges Breakdown
            </h3>
        </div>
        <div class="p-6">
            <table class="w-full">
                <tbody class="divide-y divide-white/10">
                    <tr>
                        <td class="py-3 text-white/80">üç≥ Breakfast</td>
                        <td class="py-3 text-right text-white/60">@Model.BreakfastCount √ó Rs.@Model.BreakfastRate</td>
                        <td class="py-3 text-right font-semibold text-amber-400">Rs.@Model.BreakfastCharges.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">üçõ Lunch</td>
                        <td class="py-3 text-right text-white/60">@Model.LunchCount √ó Rs.@Model.LunchRate</td>
                        <td class="py-3 text-right font-semibold text-blue-400">Rs.@Model.LunchCharges.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">üçΩÔ∏è Dinner</td>
                        <td class="py-3 text-right text-white/60">@Model.DinnerCount √ó Rs.@Model.DinnerRate</td>
                        <td class="py-3 text-right font-semibold text-purple-400">Rs.@Model.DinnerCharges.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">üíß Water</td>
                        <td class="py-3 text-right text-white/60">@Model.WaterCount meals √ó Rs.0</td>
                        <td class="py-3 text-right font-semibold text-emerald-400">FREE</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">‚òï Tea/Coffee</td>
                        <td class="py-3 text-right text-white/60">@Model.TeaCount meals √ó Rs.@Model.TeaRate</td>
                        <td class="py-3 text-right font-semibold text-amber-400">Rs.@Model.TeaCharges.ToString("N2")</td>
                    </tr>
                    <tr class="bg-white/5">
                        <td colspan="2" class="py-3 font-semibold text-white">Total Charges</td>
                        <td class="py-3 text-right font-bold text-lg text-emerald-400">Rs.@Model.GrandTotal.ToString("N2")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Payment Summary -->
    <div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
        <div class="bg-white/10 px-6 py-4 border-b border-white/20">
            <h3 class="font-semibold text-white">
                <i class="fas fa-wallet mr-2 text-blue-400"></i>Payment Summary
            </h3>
        </div>
        <div class="p-6">
            <table class="w-full">
                <tbody class="divide-y divide-white/10">
                    <tr>
                        <td class="py-3 text-white/80">Total Charges</td>
                        <td class="py-3 text-right font-semibold text-white">Rs.@Model.GrandTotal.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="py-3 text-white/80">Amount Paid</td>
                        <td class="py-3 text-right font-semibold text-emerald-400">Rs.@Model.AmountPaid.ToString("N2")</td>
                    </tr>
                    <tr class="bg-white/5">
                        <td class="py-3 font-semibold text-white">Balance Due</td>
                        <td class="py-3 text-right font-bold text-lg @(Model.Balance > 0 ? "text-red-400" : "text-emerald-400")">
                            Rs.@Model.Balance.ToString("N2")
                        </td>
                    </tr>
                </tbody>
            </table>
            
            @if (Model.Balance > 0)
            {
                <div class="mt-4 pt-4 border-t border-white/10">
                    <a href="/User/Payments/PayNow" class="block w-full text-center bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white py-3 rounded-xl transition-all shadow-lg font-medium">
                        <i class="fas fa-credit-card mr-2"></i>Pay Now
                    </a>
                </div>
            }
            else
            {
                <div class="mt-4 pt-4 border-t border-white/10">
                    <div class="bg-emerald-500/20 border border-emerald-500/30 rounded-xl p-4 text-center">
                        <i class="fas fa-check-circle text-emerald-400 text-2xl mb-2"></i>
                        <p class="text-emerald-400 font-medium">All Paid!</p>
                        <p class="text-white/60 text-sm">You have no pending dues for this month</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Payments This Month -->
<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden mb-6">
    <div class="bg-white/10 px-6 py-4 border-b border-white/20 flex justify-between items-center">
        <h3 class="font-semibold text-white">
            <i class="fas fa-history mr-2 text-purple-400"></i>Payments This Month
        </h3>
        <span class="text-white/60 text-sm">@Model.Payments.Count payment(s)</span>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-white/5 border-b border-white/10">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Method</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-emerald-400 uppercase">Reference</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-emerald-400 uppercase">Amount</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/10">
                @if (Model.Payments.Any())
                {
                    @foreach (var payment in Model.Payments)
                    {
                        <tr class="hover:bg-white/5">
                            <td class="px-6 py-4 text-white">@payment.Date.ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded-full text-xs font-medium @(payment.PaymentMode == MessManagement.Models.PaymentMode.Cash ? "bg-green-500/20 text-green-400" : "bg-blue-500/20 text-blue-400") border @(payment.PaymentMode == MessManagement.Models.PaymentMode.Cash ? "border-green-500/30" : "border-blue-500/30")">
                                    @payment.PaymentMode
                                </span>
                            </td>
                            <td class="px-6 py-4 text-white/60 font-mono text-sm">@(payment.StripePaymentId ?? "-")</td>
                            <td class="px-6 py-4 text-right font-semibold text-emerald-400">Rs.@payment.Amount.ToString("N2")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="px-6 py-8 text-center text-white/50">
                            <i class="fas fa-info-circle mr-2"></i>No payments recorded for this month
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Detailed Bill - Dishes Eaten Each Day -->
<div class="bg-white/15 backdrop-blur-xl rounded-2xl border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-amber-500/20 to-orange-500/20 px-6 py-4 border-b border-white/20 flex justify-between items-center">
        <h3 class="font-semibold text-white">
            <i class="fas fa-utensils mr-2 text-amber-400"></i>Detailed Bill - Dishes Eaten
        </h3>
        <span class="text-white/60 text-sm">@Model.DailyMeals.Count day(s) with meals</span>
    </div>
    <div class="overflow-x-auto">
        @if (Model.DailyMeals.Any())
        {
            <table class="w-full">
                <thead class="bg-white/5 border-b border-white/10">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-amber-400 uppercase">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-amber-400 uppercase">Day</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-amber-400 uppercase">üç≥ Breakfast</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-amber-400 uppercase">üçõ Lunch</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-amber-400 uppercase">üçΩÔ∏è Dinner</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-amber-400 uppercase">Day Total</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/10">
                    @foreach (var day in Model.DailyMeals)
                    {
                        var breakfast = day.Meals.FirstOrDefault(m => m.MealType == MessManagement.Models.MealType.Breakfast);
                        var lunch = day.Meals.FirstOrDefault(m => m.MealType == MessManagement.Models.MealType.Lunch);
                        var dinner = day.Meals.FirstOrDefault(m => m.MealType == MessManagement.Models.MealType.Dinner);
                        <tr class="hover:bg-white/5">
                            <td class="px-6 py-4 text-white font-medium">@day.Date.ToString("MMM dd")</td>
                            <td class="px-6 py-4 text-white/60">@day.DayName.Substring(0, 3)</td>
                            <td class="px-6 py-4">
                                @if (breakfast != null)
                                {
                                    <div>
                                        <span class="text-white text-sm">@breakfast.DishName</span>
                                        <span class="text-amber-400 text-xs ml-2">Rs.@breakfast.Price.ToString("N0")</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-white/30 text-sm">‚Äî</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @if (lunch != null)
                                {
                                    <div>
                                        <span class="text-white text-sm">@lunch.DishName</span>
                                        <span class="text-blue-400 text-xs ml-2">Rs.@lunch.Price.ToString("N0")</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-white/30 text-sm">‚Äî</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @if (dinner != null)
                                {
                                    <div>
                                        <span class="text-white text-sm">@dinner.DishName</span>
                                        <span class="text-purple-400 text-xs ml-2">Rs.@dinner.Price.ToString("N0")</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-white/30 text-sm">‚Äî</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-right font-semibold text-emerald-400">Rs.@day.DayTotal.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-white/5 border-t border-white/20">
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-right font-semibold text-white">Total Meal Charges</td>
                        <td class="px-6 py-4 text-right font-bold text-lg text-emerald-400">Rs.@Model.DailyMeals.Sum(d => d.DayTotal).ToString("N2")</td>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <div class="p-8 text-center">
                <i class="fas fa-calendar-times text-4xl text-white/30 mb-4"></i>
                <p class="text-white/50">No meals recorded for this month</p>
            </div>
        }
    </div>
</div>

<style>
    select option {
        background-color: #1f2937;
        color: white;
    }
</style>