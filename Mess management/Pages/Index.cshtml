@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mess Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * { font-family: 'Inter', sans-serif; }
        html, body { height: 100%; overflow: hidden; }
        
        .btn-primary {
            background: linear-gradient(135deg, #059669 0%, #10b981 100%);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(16, 185, 129, 0.5);
        }
        
        .icon-box {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .icon-box:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: translateY(-3px);
            transition: all 0.3s ease;
        }
    </style>
</head>
<body class="h-screen overflow-hidden">
    <!-- Full Screen Background Image -->
    <div class="fixed inset-0 z-0">
        <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?w=1920&h=1080&fit=crop" 
             alt="Background" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <!-- Content Directly on Background -->
    <div class="relative z-10 h-screen flex flex-col items-center justify-center p-6">
        <!-- Logo -->
        <div class="flex items-center space-x-3 mb-8">
            <div class="w-14 h-14 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center shadow-lg">
                <i class="fas fa-utensils text-white text-2xl"></i>
            </div>
            <div>
                <h1 class="text-2xl font-bold text-white">MessManager</h1>
                <p class="text-sm text-white/60">Enterprise System</p>
            </div>
        </div>

        <!-- Welcome -->
        <div class="text-center mb-10">
            <h2 class="text-4xl font-bold text-white mb-2">Welcome</h2>
            <p class="text-white/70 text-lg">Access your management portal</p>
        </div>

        <!-- Features Grid -->
        <div class="flex gap-4 mb-10">
            <div class="text-center cursor-pointer">
                <div class="icon-box w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-2">
                    <i class="fas fa-users text-white text-xl"></i>
                </div>
                <span class="text-sm text-white/70">Members</span>
            </div>
            <div class="text-center cursor-pointer">
                <div class="icon-box w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-2">
                    <i class="fas fa-calendar-check text-white text-xl"></i>
                </div>
                <span class="text-sm text-white/70">Attendance</span>
            </div>
            <div class="text-center cursor-pointer">
                <div class="icon-box w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-2">
                    <i class="fas fa-bowl-food text-white text-xl"></i>
                </div>
                <span class="text-sm text-white/70">Menu</span>
            </div>
            <div class="text-center cursor-pointer">
                <div class="icon-box w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-2">
                    <i class="fas fa-wallet text-white text-xl"></i>
                </div>
                <span class="text-sm text-white/70">Payments</span>
            </div>
        </div>

        <!-- Login Button -->
        <a href="/Account/Login" class="btn-primary text-white px-12 py-4 rounded-xl font-semibold text-lg shadow-xl">
            <i class="fas fa-arrow-right-to-bracket mr-2"></i>Access Portal
        </a>

        <!-- Footer -->
        
    </div>
</body>
</html>