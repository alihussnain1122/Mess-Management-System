@page
@model MessManagement.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mess Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        * { font-family: 'Inter', sans-serif; }
        .input-validation-error { border-color: rgba(239, 68, 68, 0.5) !important; background: rgba(239, 68, 68, 0.1) !important; }
        .requirement-met { color: #34d399 !important; }
        .requirement-unmet { color: rgba(255,255,255,0.4); }
    </style>
</head>
<body class="min-h-screen">
    <!-- Full Background -->
    <div class="fixed inset-0 z-0">
        <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80" 
             class="w-full h-full object-cover" alt="Background">
        <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-md">
            <!-- Logo -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl mb-4 shadow-lg">
                    <i class="fas fa-utensils text-white text-2xl"></i>
                </div>
                <h1 class="text-2xl font-bold text-white">Mess Management</h1>
                <p class="text-white/60 mt-1">Create new password</p>
            </div>

            <!-- Card -->
            <div class="bg-white/15 backdrop-blur-xl rounded-3xl border border-white/20 p-8 shadow-2xl">
                <div class="text-center mb-6">
                    <div class="inline-flex items-center justify-center w-12 h-12 bg-green-500/20 rounded-full mb-3">
                        <i class="fas fa-lock text-green-400 text-xl"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-white">Set New Password</h2>
                    <p class="text-white/60 text-sm mt-1">Your identity has been verified</p>
                    <p class="text-emerald-400 text-sm font-medium">@Model.Email</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="mb-4 p-3 bg-red-500/20 border border-red-500/30 rounded-xl">
                        <p class="text-red-400 text-sm text-center">@Model.ErrorMessage</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="mb-4 p-3 bg-green-500/20 border border-green-500/30 rounded-xl">
                        <p class="text-green-400 text-sm text-center">@Model.SuccessMessage</p>
                    </div>
                    <div class="text-center">
                        <a href="/Account/Login" class="inline-flex items-center bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-6 py-3 rounded-xl font-semibold transition-all shadow-lg">
                            <i class="fas fa-sign-in-alt mr-2"></i>
                            Go to Login
                        </a>
                    </div>
                }
                else
                {
                    <form method="post" id="resetPasswordForm">
                        <input type="hidden" asp-for="Email" />
                        
                        <div class="mb-4 form-group">
                            <label class="block text-sm font-medium text-white/70 mb-2">New Password <span class="text-red-400">*</span></label>
                            <div class="relative">
                                <i class="fas fa-lock absolute left-4 top-1/2 -translate-y-1/2 text-white/40"></i>
                                <input type="password" asp-for="Input.NewPassword" id="newPassword" required
                                       class="w-full bg-white/10 border border-white/20 rounded-xl pl-11 pr-12 py-3 text-white placeholder-white/40 focus:outline-none focus:border-emerald-500/50 focus:bg-white/15 transition-all" 
                                       placeholder="Enter new password" />
                                <button type="button" onclick="togglePassword('newPassword', 'eyeIcon1')" class="absolute right-4 top-1/2 -translate-y-1/2 text-white/40 hover:text-white/60">
                                    <i id="eyeIcon1" class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.NewPassword" class="text-red-400 text-xs mt-1 block"></span>
                        </div>

                        <div class="mb-6 form-group">
                            <label class="block text-sm font-medium text-white/70 mb-2">Confirm Password <span class="text-red-400">*</span></label>
                            <div class="relative">
                                <i class="fas fa-lock absolute left-4 top-1/2 -translate-y-1/2 text-white/40"></i>
                                <input type="password" asp-for="Input.ConfirmPassword" id="confirmPassword" required
                                       class="w-full bg-white/10 border border-white/20 rounded-xl pl-11 pr-12 py-3 text-white placeholder-white/40 focus:outline-none focus:border-emerald-500/50 focus:bg-white/15 transition-all" 
                                       placeholder="Confirm new password" />
                                <button type="button" onclick="togglePassword('confirmPassword', 'eyeIcon2')" class="absolute right-4 top-1/2 -translate-y-1/2 text-white/40 hover:text-white/60">
                                    <i id="eyeIcon2" class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-xs mt-1 block"></span>
                        </div>

                        <!-- Password Requirements -->
                        <div class="mb-6 p-3 bg-white/5 rounded-xl">
                            <p class="text-white/50 text-xs mb-2">Password must contain:</p>
                            <ul class="text-white/40 text-xs space-y-1">
                                <li id="req-length" class="requirement-unmet"><i class="fas fa-times mr-2 req-icon"></i>At least 6 characters</li>
                                <li id="req-upper" class="requirement-unmet"><i class="fas fa-times mr-2 req-icon"></i>One uppercase letter</li>
                                <li id="req-lower" class="requirement-unmet"><i class="fas fa-times mr-2 req-icon"></i>One lowercase letter</li>
                                <li id="req-number" class="requirement-unmet"><i class="fas fa-times mr-2 req-icon"></i>One number</li>
                            </ul>
                        </div>

                        <button type="submit" id="submitBtn"
                                class="w-full bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white py-3 rounded-xl font-semibold transition-all shadow-lg hover:shadow-emerald-500/25">
                            <span class="btn-text"><i class="fas fa-key mr-2"></i>Reset Password</span>
                            <span class="btn-spinner hidden"><i class="fas fa-spinner fa-spin mr-2"></i>Resetting...</span>
                        </button>
                    </form>
                }

                <div class="mt-6 text-center">
                    <a href="/Account/Login" class="text-white/50 hover:text-white/70 text-sm transition-colors">
                        <i class="fas fa-arrow-left mr-1"></i>
                        Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Password strength validation
        const newPassword = document.getElementById('newPassword');
        const confirmPassword = document.getElementById('confirmPassword');
        
        if (newPassword) {
            newPassword.addEventListener('input', function() {
                const val = this.value;
                updateRequirement('req-length', val.length >= 6);
                updateRequirement('req-upper', /[A-Z]/.test(val));
                updateRequirement('req-lower', /[a-z]/.test(val));
                updateRequirement('req-number', /[0-9]/.test(val));
            });
        }

        function updateRequirement(id, met) {
            const el = document.getElementById(id);
            if (!el) return;
            const icon = el.querySelector('.req-icon');
            if (met) {
                el.classList.add('requirement-met');
                el.classList.remove('requirement-unmet');
                icon.classList.remove('fa-times');
                icon.classList.add('fa-check');
            } else {
                el.classList.remove('requirement-met');
                el.classList.add('requirement-unmet');
                icon.classList.add('fa-times');
                icon.classList.remove('fa-check');
            }
        }

        const form = document.getElementById('resetPasswordForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                const pwd = newPassword.value;
                const confirm = confirmPassword.value;
                
                if (!pwd || !confirm) {
                    e.preventDefault();
                    Swal.fire({
                        toast: true, position: 'top-end', icon: 'error',
                        title: 'Please fill in all fields', showConfirmButton: false, timer: 3000,
                        background: 'rgba(239, 68, 68, 0.95)', color: '#fff'
                    });
                    return;
                }
                
                if (pwd.length < 6 || !/[A-Z]/.test(pwd) || !/[a-z]/.test(pwd) || !/[0-9]/.test(pwd)) {
                    e.preventDefault();
                    Swal.fire({
                        toast: true, position: 'top-end', icon: 'error',
                        title: 'Password does not meet requirements', showConfirmButton: false, timer: 3000,
                        background: 'rgba(239, 68, 68, 0.95)', color: '#fff'
                    });
                    return;
                }
                
                if (pwd !== confirm) {
                    e.preventDefault();
                    Swal.fire({
                        toast: true, position: 'top-end', icon: 'error',
                        title: 'Passwords do not match', showConfirmButton: false, timer: 3000,
                        background: 'rgba(239, 68, 68, 0.95)', color: '#fff'
                    });
                    return;
                }

                const btn = document.getElementById('submitBtn');
                btn.disabled = true;
                btn.classList.add('opacity-75', 'cursor-not-allowed');
                btn.querySelector('.btn-text').classList.add('hidden');
                btn.querySelector('.btn-spinner').classList.remove('hidden');
            });
        }
    </script>
</body>
</html>
